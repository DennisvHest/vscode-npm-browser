// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-extension-src",
      "command": "npm",
      "type": "shell",
      "args": ["run", "build-extension"]
    },
    {
      "label": "copy-package-json",
      "command": "npm",
      "type": "shell",
      "args": [
       "run", 
       "dist:copy-package"
      ]
    },
    {
      "label": "copy-assets",
      "command": "npm",
      "type": "shell",
      "args": [
       "run", 
       "dist:copy-assets"
      ]
    },
    {
      "label": "build-extension",
      "dependsOn": ["build-extension-src", "copy-package-json", "copy-assets"]
    }
  ]
}
